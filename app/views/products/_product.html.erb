<div id="<%= dom_id product %>" class="border">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Sku:</strong>
    <%= product.sku %>
  </p>

  <p>
    <strong>Enabled:</strong>
    <%= product.enabled %>
  </p>

  <p>
    <strong>Deleted at:</strong>
    <%= product.deleted_at %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= product.brand.name %>
  </p>
</div>
